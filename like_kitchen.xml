<?xml version='1.0' encoding='utf-8'?>
<!--
	Mitsuba conversion of the classic Cornell Box scene (mitsuba-renderer.org).
	Edited by us to have an upside-down light source.
-->

<scene version="0.6.0">
	<integrator type="bdpt">
		<integer name="rrDepth" value="10"/>
	</integrator>

	<sensor type="perspective">
		<float name="farClip" value="280"/>
		<float name="focusDistance" value="83.7611"/>
		<float name="fov" value="50.9268"/>
		<string name="fovAxis" value="x"/>
		<float name="nearClip" value="10"/>
		<transform name="toWorld">

			<lookat up="0, 1, 0" target="-24.7563, 17.4481, -64.6902" origin="-25.3244, 17.5139, -65.5105"/>
		</transform>

		<sampler type="independent">
			<integer name="sampleCount" value="25000"/>
		</sampler>

		<film type="hdrfilm">
			<boolean name="banner" value="false"/>
			<integer name="height" value="250"/>
			<integer name="width" value="350"/>
			<rfilter type="box"/>
		</film>
	</sensor>
	
	<emitter type="sunsky">
		<transform name="toWorld">
			<rotate angle="0" x="1"/>
			<rotate angle="0" z="1"/>
			<rotate angle="2" y="1"/>
		</transform>
		<float name="hour" value="8.5"/>
		<float name="turbidity" value="5"/>
		<float name="sunRadiusScale" value="2"/>
		<float name="scale" value="2"/>
	</emitter>
	<!--<sensor type="perspective">
		<float name="farClip" value="280"/>
		<float name="focusDistance" value="78.6536"/>
		<float name="fov" value="50.9268"/>
		<string name="fovAxis" value="x"/>
		<float name="nearClip" value="10"/>
		<transform name="toWorld">

			<lookat up="0.163047, 0.976744, 0.139234" target="-72.5784, 23.4835, -61.9794" origin="-73.3211, 23.6979, -62.6137"/>
		</transform>

		<sampler type="independent">
			<integer name="sampleCount" value="4"/>
		</sampler>

		<film type="hdrfilm">
			<rfilter type="gaussian"/>
		</film>
	</sensor>-->
	<bsdf type="twosided" id="CookerBlack" >
		<bsdf type="roughplastic" >
			<float name="alpha" value="0.08" />
			<string name="distribution" value="ggx" />
			<float name="intIOR" value="1.5" />
			<float name="extIOR" value="1" />
			<boolean name="nonlinear" value="true" />
			<rgb name="diffuseReflectance" value="0.015396, 0.015396, 0.015396"/>
		</bsdf>
	</bsdf>
	<bsdf type="dielectric" id="CookerGlass" >
		<float name="intIOR" value="1.5" />
		<float name="extIOR" value="1" />
		<rgb name="specularTransmittance" value="0, 0, 0"/>
	</bsdf>
	<bsdf type="dielectric" id="WineGlasses">
		<float name="intIOR" value="1.5"/>
		<float name="extIOR" value="1"/>
	</bsdf>

	<bsdf type="diffuse" id="wall">
		<rgb name="reflectance" value="1,1,1"/>
	</bsdf>

	<bsdf type="diffuse" id="red">
		<rgb name="reflectance" value="1,0,0"/>
	</bsdf>
	
	<bsdf type="diffuse" id="green">
		<rgb name="reflectance" value="0,1,0"/>
	</bsdf>

	<!-- table -->
	<!-- obj 1 -->
	<shape type="cube">
		<transform name="toWorld">
			<scale y="10" x="8" z="10"/>
			<translate y="0" x="12" z="60"/>
		</transform>

		<ref id="CookerBlack"/>
	</shape>
	<!-- obj 2 -->
	<shape type="cube">
		<transform name="toWorld">
			<scale y="10" x="10" z="10"/>
			<translate y="0" x="30" z="60"/>
		</transform>

		<ref id="CookerGlass"/>
	</shape>
	<!-- obj 3 -->
	<shape type="cube">
		<transform name="toWorld">
			<scale y="10" x="8" z="10"/>
			<translate y="0" x="48" z="60"/>
		</transform>

		<ref id="wall"/>
	</shape>
	
	<shape type="cube">
		<transform name="toWorld">
			<scale y="0.5" x="20" z="10"/>
			<translate y="3.5" x="50" z="10"/>
		</transform>

		<ref id="WineGlasses"/>
	</shape>
	 <!-- right back poot -->
	<shape type="cube">
		<transform name="toWorld">
			<scale y="7" x="0.7" z="0.7"/>
			<translate y="-3" x="70" z="0"/>
		</transform>

		<ref id="wall"/>
	</shape>
	 <!-- left back poot -->
	<shape type="cube">
		<transform name="toWorld">
			<scale y="7" x="0.7" z="0.7"/>
			<translate y="-3" x="70" z="20"/>
		</transform>

		<ref id="wall"/>
	</shape>
	 <!-- right front poot -->
	<shape type="cube">
		<transform name="toWorld">
			<scale y="7" x="0.7" z="0.7"/>
			<translate y="-3" x="30" z="0"/>
		</transform>

		<ref id="wall"/>
	</shape>
	 <!-- left front poot -->
	<shape type="cube">
		<transform name="toWorld">
			<scale y="7" x="0.7" z="0.7"/>
			<translate y="-3" x="30" z="20"/>
		</transform>

		<ref id="wall"/>
	</shape>
	
	<!-- window wall -->
	<!--lefter part -->

	<shape type="cube">
		<transform name="toWorld">
			<scale y="50" x="1" z="40"/>
			<translate y="25" x="75" z="-45"/>
		</transform>

		<ref id="wall"/>
	</shape>
	<!-- righter part -->

	<shape type="cube">
		<transform name="toWorld">
			<scale y="50" x="1" z="30"/>
			<translate y="25" x="75" z="55"/>
		</transform>

		<ref id="wall"/>
	</shape>
	<!-- middle lower part -->

	<shape type="cube">
		<transform name="toWorld">
			<scale y="8" x="1" z="15"/>
			<translate y="-2" x="75" z="10"/>
		</transform>

		<ref id="wall"/>
	</shape>
	<!-- middle upper part -->

	<shape type="cube">
		<transform name="toWorld">
			<scale y="20" x="1" z="15"/>
			<translate y="60" x="75" z="10"/>
		</transform>

		<ref id="wall"/>
	</shape>
	<!-- rails left vert -->

	<shape type="cube">
		<transform name="toWorld">
			<scale y="17" x="0.3" z="0.3"/>
			<translate y="23" x="75" z="2"/>
		</transform>

		<ref id="red"/>
	</shape>
	<!-- rails right vert -->

	<shape type="cube">
		<transform name="toWorld">
			<scale y="17" x="0.3" z="0.3"/>
			<translate y="23" x="75" z="18"/>
		</transform>

		<ref id="red"/>
	</shape>
	<!-- rails midden vert -->

	<shape type="cube">
		<transform name="toWorld">
			<scale y="17" x="0.3" z="0.3"/>
			<translate y="23" x="75" z="10"/>
		</transform>

		<ref id="red"/>
	</shape>
	<!-- rails midden horz -->

	<shape type="cube">
		<transform name="toWorld">
			<scale y="0.3" x="0.3" z="15"/>
			<translate y="13" x="75" z="10"/>
		</transform>

		<ref id="red"/>
	</shape>

	<shape type="cube">
		<transform name="toWorld">
			<scale y="0.3" x="0.3" z="15"/>
			<translate y="20" x="75" z="10"/>
		</transform>

		<ref id="red"/>
	</shape>

	<shape type="cube">
		<transform name="toWorld">
			<scale y="0.3" x="0.3" z="15"/>
			<translate y="27" x="75" z="10"/>
		</transform>

		<ref id="red"/>
	</shape>

	<shape type="cube">
		<transform name="toWorld">
			<scale y="0.3" x="0.3" z="15"/>
			<translate y="34" x="75" z="10"/>
		</transform>

		<ref id="red"/>
	</shape>
	<!-- floor -->

	<shape type="rectangle">
		<transform name="toWorld">
			<scale y="75" x="75" z="1"/>
			<translate y="0" x="0" z="-10"/>
			<rotate x="1" angle="-90"/>
		</transform>

		<ref id="wall"/>
	</shape>
	<!-- roof -->

	<shape type="rectangle">
		<transform name="toWorld">
			<scale y="75" x="75" z="1"/>
			<translate y="0" x="0" z="-60"/>
			<rotate x="1" angle="90"/>
		</transform>

		<ref id="wall"/>
	</shape>
	<!-- wall left -->

	<shape type="rectangle">
		<transform name="toWorld">
			<scale y="75" x="75" z="1"/>
			<translate y="0" x="-35" z="-74.5"/>
			<rotate angle="-90" z="1"/>
		</transform>

		<ref id="wall"/>
	</shape>
	<!-- wall right -->

	<shape type="rectangle">
		<transform name="toWorld">
			<scale y="75" x="75" z="1"/>
			<translate y="35" x="0" z="-74.5"/>
			<rotate y="1" angle="180"/>
		</transform>

		<ref id="wall"/>
	</shape>
	<!-- wall back -->

	<shape type="rectangle">
		<transform name="toWorld">
			<scale y="75" x="75" z="1"/>
			<translate y="35" x="0" z="-74.5"/>
			<rotate y="1" angle="90"/>
		</transform>

		<ref id="wall"/>
	</shape>
</scene>
