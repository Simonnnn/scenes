<?xml version='1.0' encoding='utf-8'?>
<!--
	Mitsuba conversion of the classic Cornell Box scene (mitsuba-renderer.org).
	Edited by us to have an upside-down light source.
-->

<scene version="0.6.0">
	<integrator type="guided_path_tom">
		<string name="bsdfSamplingFractionLoss" value="kl"/>
		<string name="directionalFilter" value="box"/>
		<integer name="rrDepth" value="10"/>
		<string name="sampleCombination" value="inversevar"/>
	</integrator>

	<sensor type="perspective">
		<float name="farClip" value="2800"/>
		<float name="focusDistance" value="160.01"/>
		<float name="fov" value="39.3077"/>
		<string name="fovAxis" value="x"/>
		<float name="nearClip" value="10"/>
		<float name="shutterClose" value="0"/>
		<float name="shutterOpen" value="0"/>
		<transform name="toWorld">

			<lookat origin="117.032, 94.6934, -85.8009" target="116.464, 94.2578, -85.1025" up="-0.281744, 0.900109, 0.332302"/>
		</transform>

		<sampler type="independent">
			<integer name="sampleCount" value="256"/>
		</sampler>

		<film type="hdrfilm">
			<boolean name="banner" value="false"/>
			<integer name="height" value="600"/>
			<integer name="width" value="600"/>

			<rfilter type="box"/>
		</film>
	</sensor>

	<bsdf id="wall" type="diffuse">
		<rgb name="reflectance" value="0.8,0.8,0.8"/>
	</bsdf>

	<bsdf id="light" type="diffuse">
		<spectrum name="reflectance" value="400:0.78, 500:0.78, 600:0.78, 700:0.78"/>
	</bsdf>

	<bsdf id="mat_donut" type="diffuse">
		<rgb name="reflectance" value=".8,.8,.4"/>
		<!-- Rhino object 'Donut' -->
	</bsdf>

	<bsdf id="red_color" type="diffuse">
		<rgb name="reflectance" value="1,0,0"/>
		<!-- Rhino object 'Donut' -->
	</bsdf>

	<bsdf id="blue_color" type="diffuse">
		<rgb name="reflectance" value="0,0,1"/>
		<!-- Rhino object 'Donut' -->
	</bsdf>

	<bsdf id="green_color" type="diffuse">
		<rgb name="reflectance" value="0,1,0"/>
		<!-- Rhino object 'Donut' -->
	</bsdf>

	<bsdf id="mat_glass" type="dielectric">
		<!-- Rhino object 'Glass' -->
		<float name="intIOR" value="1.5"/>
		<float name="extIOR" value="1.0"/>
		<float name="alpha" value="0.05"/>
	</bsdf>

	<bsdf id="gray_plastic" type="plastic">
		<rgb name="diffuseReflectance" value="0.8,0.8,0.8"/>
		<float name="intIOR" value="1.9"/>
	</bsdf>

	<!--<emitter type="spot">
		<transform name="toWorld">
			

			<lookat origin="100, 80, -40" target="2.5, 2.5, 2.5"/>
		</transform>
		<float name="cutoffAngle" value="60"/>
		<spectrum name="intensity" value="20000"/>
		<float name="samplingWeight" value="200"/>
	</emitter>-->
	
	<shape type="obj">
		<string name="filename" value="meshes/cbox_luminaire.obj"/>
		<transform name="toWorld">
			<translate x="-400" y="2000" z="00"/>
			<rotate z="1" angle="-60"/>
			<rotate y="1" angle="45"/>
			<scale y="0.1" z="0.1" x="0.1"/>
		</transform>

		<ref id="light"/>

		<emitter type="area">
			<spectrum name="radiance" value="1000"/>
		</emitter>
	</shape>

	<emitter type="sky">
		<transform name="toWorld">
			<rotate x="1" angle="90"/>
		</transform>
	</emitter>
	<!-- level 1 -->

	<shape type="cube">
		<transform name="toWorld">
			<translate y="0" z="0" x="0"/>
			<scale y="10" z="10" x="10"/>
		</transform>

		<ref id="mat_donut"/>
	</shape>

	<shape type="cube">
		<transform name="toWorld">
			<translate y="0" z="0" x="3"/>
			<scale y="8" z="8" x="8"/>
		</transform>

		<ref id="green_color"/>
	</shape>

	<shape type="cube">
		<transform name="toWorld">
			<translate y="0" z="2.5" x="0"/>
			<scale y="10" z="10" x="10"/>
		</transform>

		<ref id="green_color"/>
	</shape>

	<shape type="cube">
		<transform name="toWorld">
			<translate y="0" z="2.5" x="2.5"/>
			<scale y="10" z="10" x="10"/>
		</transform>

		<ref id="red_color"/>
	</shape>

	<shape type="cube">
		<transform name="toWorld">
			<translate y="0" z="5" x="2.5"/>
			<scale y="10" z="10" x="10"/>
		</transform>

		<ref id="blue_color"/>
	</shape>

	<shape type="cube">
		<transform name="toWorld">
			<translate y="0" z="5" x="0"/>
			<scale y="10" z="10" x="10"/>
		</transform>

		<ref id="red_color"/>
	</shape>

	<shape type="cube">
		<transform name="toWorld">
			<translate y="0" z="5" x="5"/>
			<scale y="10" z="10" x="10"/>
		</transform>

		<ref id="mat_donut"/>
	</shape>

	<shape type="cube">
		<transform name="toWorld">
			<translate y="0" z="2.5" x="5"/>
			<scale y="10" z="10" x="10.5"/>
		</transform>

		<ref id="green_color"/>
	</shape>

	<shape type="cube">
		<transform name="toWorld">
			<translate y="0.5" z="0" x="7"/>
			<scale y="7" z="7" x="7"/>
		</transform>

		<ref id="mat_donut"/>
	</shape>
	<!-- level 2 -->

	<shape type="cube">
		<transform name="toWorld">
			<translate y="2.5" z="0" x="0"/>
			<scale y="10" z="10" x="10"/>
		</transform>

		<ref id="red_color"/>
	</shape>

	<shape type="cube">
		<transform name="toWorld">
			<translate y="2.75" z="0" x="3"/>
			<scale y="7.5" z="7.5" x="7.5"/>
		</transform>

		<ref id="mat_donut"/>
	</shape>

	<shape type="cube">
		<transform name="toWorld">
			<translate y="2.75" z="2.5" x="0"/>
			<scale y="10" z="11" x="10"/>
		</transform>

		<ref id="gray_plastic"/>
	</shape>

	<shape type="cube">
		<transform name="toWorld">
			<translate y="2.5" z="2.5" x="2.5"/>
			<scale y="11" z="10" x="10"/>
		</transform>

		<ref id="mat_glass"/>
	</shape>

	<shape type="cube">
		<transform name="toWorld">
			<translate y="2.5" z="5" x="2.5"/>
			<scale y="10" z="10" x="10"/>
		</transform>

		<ref id="green_color"/>
	</shape>

	<shape type="cube">
		<transform name="toWorld">
			<translate y="2.5" z="5" x="5"/>
			<scale y="10" z="10" x="11.5"/>
		</transform>

		<ref id="blue_color"/>
	</shape>

	<shape name="test" type="cube">
		<transform name="toWorld">
			<translate y="3" z="3" x="6.5"/>
			<scale y="8" z="8" x="8"/>
		</transform>

		<ref id="red_color"/>
	</shape>

	<shape type="cube">
		<transform name="toWorld">
			<translate y="2.5" z="6" x="0"/>
			<scale y="10" z="10" x="10"/>
		</transform>

		<ref id="red_color"/>
	</shape>
	<!-- level 3 -->

	<shape type="cube">
		<transform name="toWorld">
			<translate y="5" z="0" x="0"/>
			<scale y="10" z="10" x="10"/>
		</transform>

		<ref id="blue_color"/>
	</shape>

	<shape type="cube">
		<transform name="toWorld">
			<translate y="5.5" z="2.5" x="0.5"/>
			<scale y="10" z="10" x="10"/>
		</transform>

		<ref id="mat_donut"/>
	</shape>

	<shape type="cube">
		<transform name="toWorld">
			<translate y="5" z="5" x="0"/>
			<scale y="10" z="10" x="10"/>
		</transform>

		<ref id="mat_donut"/>
	</shape>

	<shape type="cube">
		<transform name="toWorld">
			<translate y="5" z="5" x="3"/>
			<scale y="10" z="10" x="10"/>
		</transform>

		<ref id="red_color"/>
	</shape>
</scene>
