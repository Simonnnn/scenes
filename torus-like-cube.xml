<?xml version='1.0' encoding='utf-8'?>
<!--
	Mitsuba conversion of the classic Cornell Box scene (mitsuba-renderer.org).
	Edited by us to have an upside-down light source.
-->

<scene version="0.6.0">
	<integrator type="mlt">
		<integer name="directSamples" value="32768"/>
		<integer name="rrDepth" value="10"/>
	</integrator>

	<sensor type="perspective">
		<float name="farClip" value="2800"/>
		<float name="focusDistance" value="1000"/>
		<float name="fov" value="39.3077"/>
		<string name="fovAxis" value="x"/>
		<float name="nearClip" value="10"/>
		<transform name="toWorld">

			<lookat up="0, -0.292842, 0.956161" target="278, 1249.04, 499.707" origin="278, 1250, 500"/>
		</transform>

		<sampler type="independent">
			<integer name="sampleCount" value="32768"/>
		</sampler>

		<float name='shutterOpen' value='0'/>
        <float name='shutterClose' value='0'/>
		<film type="hdrfilm">
			<boolean name="banner" value="false"/>
			<integer name="height" value="512"/>
			<integer name="width" value="512"/>

			<rfilter type="box"/>
		</film>
	</sensor>

	<bsdf id="wall" type="diffuse">
		<rgb name="reflectance" value="0.8,0.8,0.8"/>
	</bsdf>

	<bsdf id="light" type="diffuse">
		<spectrum name="reflectance" value="400:0.78, 500:0.78, 600:0.78, 700:0.78"/>
	</bsdf>

	<bsdf id="mat_donut" type="diffuse">
		<rgb name="reflectance" value=".8,.8,.4"/>
		<!-- Rhino object 'Donut' -->
	</bsdf>

	<bsdf id="mat_glass" type="dielectric">
		<!-- Rhino object 'Glass' -->
		<float name="intIOR" value="1.5"/>
		<float name="extIOR" value="1.0"/>
		<float name="alpha" value="0.05"/>
	</bsdf>

	<emitter type="sunsky">
		<transform name="toWorld">
			<rotate angle="70" x="1"/>
			<rotate angle="180" z="1"/>
			<rotate angle="0" y="1"/>
		</transform>
		<float name="hour" value="9"/>
		<float name="turbidity" value="5"/>
		<float name="sunRadiusScale" value="4"/>
	</emitter>
	
	<!--<shape type="cube">
		<transform name="toWorld">
			<scale x="10" y="10" z="10"/>
			<translate x="300" y="360" z="5.8" />
		</transform>
		<bsdf type="diffuse">
			<rgb name="reflectance" value="1,0,0"/>
		</bsdf>
	</shape>-->
	
	<!--<shape type="sphere">
		<transform name="toWorld">
			<translate x="-80" y="275" z="275"/>
		</transform>

		<ref id="light"/>
		<float name="radius" value="50"/>
		<emitter type="area">
			<spectrum name="radiance" value="400:0, 500:86, 600:101.2, 700:106.8"/>
		</emitter>
	</shape>-->

	<shape type="cube">
		<animation name="toWorld">
			<transform time="0">
				<translate y="2.75" z="1.5" x="2"/>
				<scale y="100" z="100" x="100"/>
			</transform>
			<transform time="1">
				<translate y="3" z="1.5" x="2"/>
				<scale y="100" z="100" x="100"/>
			</transform>
		</animation>

		<ref id="mat_glass"/>
	</shape>

	<shape type="cube">
		<animation name="toWorld">
			<transform time="0">
				<translate y="4.625" z="2" x="2.75"/>
				<scale y="60" z="60" x="60"/>
			</transform>
			<transform time="1">
				<translate y="5" z="2" x="2.75"/>
				<scale y="60" z="60" x="60"/>
			</transform>
		</animation>

		<ref id="mat_donut"/>
	</shape>

	<shape type="obj">
		<string name="filename" value="meshes/cbox_back.obj"/>
		<transform name="toWorld">
			<rotate angle="180" y="1"/>
			<translate y="0" z="565" x="556"/>
			<scale y="1" z="1" x="1"/>
		</transform>

		<ref id="wall"/>
	</shape>
</scene>
